@base <https://vocab.aleph.wiki/> .
@prefix : <https://vocab.aleph.wiki/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix schema: <http://schema.org/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix dct: <http://purl.org/dc/terms/> .

<> a owl:Ontology ;
    rdfs:label "Aleph Wiki Ontology"@en ;
    rdfs:comment "Ontology for the Aleph Wiki knowledge graph system, defining classes and properties for sessions, interactions, concepts, and metadata."@en ;
    dct:created "2026-01-10T19:16:00Z"^^xsd:dateTime ;
    owl:versionInfo "0.1.0-wip" ;
    rdfs:seeAlso "This vocabulary is a work-in-progress and subject to change."@en .

#################################################################
#    Classes
#################################################################

### Session Classes

:AlephSession a owl:Class ;
    rdfs:label "Aleph Session"@en ;
    rdfs:comment "A session within the Aleph Wiki system, representing a distinct interaction period."@en ;
    rdfs:subClassOf schema:Event .

:ClaudeCodeSession a owl:Class ;
    rdfs:label "Claude Code Session"@en ;
    rdfs:comment "A specific type of session conducted with Claude Code assistant."@en ;
    rdfs:subClassOf :AlephSession .

### Interaction Classes

:InteractionAction a owl:Class ;
    rdfs:label "Interaction Action"@en ;
    rdfs:comment "An action representing an interaction within an Aleph session."@en ;
    owl:equivalentClass schema:InteractAction .

:LearningInteraction a owl:Class ;
    rdfs:label "Learning Interaction"@en ;
    rdfs:comment "An interaction focused on learning or knowledge acquisition."@en ;
    rdfs:subClassOf :InteractionAction .

:ConceptCreation a owl:Class ;
    rdfs:label "Concept Creation"@en ;
    rdfs:comment "An interaction that results in the creation of a new concept."@en ;
    rdfs:subClassOf :InteractionAction .

### Concept Classes

:Concept a owl:Class ;
    rdfs:label "Concept"@en ;
    rdfs:comment "A general concept or topic in the knowledge graph."@en ;
    owl:equivalentClass skos:Concept .

:ImportantConcept a owl:Class ;
    rdfs:label "Important Concept"@en ;
    rdfs:comment "A concept with high perceived importance (>= 0.7)."@en ;
    rdfs:subClassOf :Concept .

### Display Classes

:DisplayableEntity a owl:Class ;
    rdfs:label "Displayable Entity"@en ;
    rdfs:comment "An entity that can be displayed in the Aleph Wiki interface with associated display metadata."@en .

#################################################################
#    Object Properties
#################################################################

### Session Properties

:hasSession a owl:ObjectProperty ;
    rdfs:label "has session"@en ;
    rdfs:comment "Links an entity to a session."@en ;
    rdfs:domain owl:Thing ;
    rdfs:range :AlephSession .

:sessionAgent a owl:ObjectProperty ;
    rdfs:label "session agent"@en ;
    rdfs:comment "The agent conducting the session."@en ;
    rdfs:domain :AlephSession ;
    rdfs:range foaf:Agent ;
    owl:equivalentProperty schema:agent .

:previousSession a owl:ObjectProperty ;
    rdfs:label "previous session"@en ;
    rdfs:comment "Links to the previous session in a sequence."@en ;
    rdfs:domain :AlephSession ;
    rdfs:range :AlephSession .

:nextSession a owl:ObjectProperty ;
    rdfs:label "next session"@en ;
    rdfs:comment "Links to the next session in a sequence."@en ;
    rdfs:domain :AlephSession ;
    rdfs:range :AlephSession ;
    owl:inverseOf :previousSession .

### Interaction Properties

:hasInteraction a owl:ObjectProperty ;
    rdfs:label "has interaction"@en ;
    rdfs:comment "Links a session to an interaction."@en ;
    rdfs:domain :AlephSession ;
    rdfs:range :InteractionAction .

:interactionParticipant a owl:ObjectProperty ;
    rdfs:label "interaction participant"@en ;
    rdfs:comment "A participant in the interaction."@en ;
    rdfs:domain :InteractionAction ;
    rdfs:range foaf:Agent ;
    owl:equivalentProperty schema:participant .

:interactionObject a owl:ObjectProperty ;
    rdfs:label "interaction object"@en ;
    rdfs:comment "The object of the interaction (e.g., concept discussed)."@en ;
    rdfs:domain :InteractionAction ;
    rdfs:range owl:Thing ;
    owl:equivalentProperty schema:object .

:interactionResult a owl:ObjectProperty ;
    rdfs:label "interaction result"@en ;
    rdfs:comment "The result or output of the interaction."@en ;
    rdfs:domain :InteractionAction ;
    rdfs:range owl:Thing ;
    owl:equivalentProperty schema:result .

### Concept Relationships

:relatedTo a owl:ObjectProperty , owl:SymmetricProperty ;
    rdfs:label "related to"@en ;
    rdfs:comment "Indicates a general relationship between concepts."@en ;
    rdfs:domain :Concept ;
    rdfs:range :Concept ;
    owl:equivalentProperty skos:related .

:derivedFrom a owl:ObjectProperty ;
    rdfs:label "derived from"@en ;
    rdfs:comment "Indicates that a concept was derived from another concept."@en ;
    rdfs:domain :Concept ;
    rdfs:range :Concept .

:mentions a owl:ObjectProperty ;
    rdfs:label "mentions"@en ;
    rdfs:comment "Indicates that an interaction or session mentions a concept."@en ;
    rdfs:domain owl:Thing ;
    rdfs:range :Concept .

#################################################################
#    Datatype Properties
#################################################################

### Importance and Ranking

:perceivedImportance a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "perceived importance"@en ;
    rdfs:comment "The perceived importance of an entity on a scale from 0.0 to 1.0, where 1.0 is most important."@en ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:decimal ;
    rdfs:subPropertyOf schema:ratingValue .

:importanceScale10 a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "importance scale (1-10)"@en ;
    rdfs:comment "The perceived importance of an entity on a scale from 1 to 10, where 10 is most important."@en ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:integer .

:priority a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "priority"@en ;
    rdfs:comment "Priority level for ordering entities (higher numbers = higher priority)."@en ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:integer .

### Display Metadata

:displayName a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "display name"@en ;
    rdfs:comment "The preferred name for display in interfaces."@en ;
    rdfs:domain :DisplayableEntity ;
    rdfs:range xsd:string ;
    rdfs:subPropertyOf rdfs:label .

:displayColor a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "display color"@en ;
    rdfs:comment "Color for visualizing the entity in graph displays (e.g., hex color code)."@en ;
    rdfs:domain :DisplayableEntity ;
    rdfs:range xsd:string .

:displayIcon a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "display icon"@en ;
    rdfs:comment "Icon or emoji representing the entity in displays."@en ;
    rdfs:domain :DisplayableEntity ;
    rdfs:range xsd:string .

:displaySize a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "display size"@en ;
    rdfs:comment "Size for rendering the entity in visualizations (e.g., node size)."@en ;
    rdfs:domain :DisplayableEntity ;
    rdfs:range xsd:decimal .

:displayOrder a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "display order"@en ;
    rdfs:comment "Order for sorting entities in lists or displays."@en ;
    rdfs:domain :DisplayableEntity ;
    rdfs:range xsd:integer .

:hidden a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "hidden"@en ;
    rdfs:comment "Whether the entity should be hidden in default displays."@en ;
    rdfs:domain :DisplayableEntity ;
    rdfs:range xsd:boolean .

### Temporal Properties

:createdAt a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "created at"@en ;
    rdfs:comment "Timestamp when the entity was created."@en ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:dateTime ;
    owl:equivalentProperty dct:created .

:updatedAt a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "updated at"@en ;
    rdfs:comment "Timestamp when the entity was last updated."@en ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:dateTime ;
    owl:equivalentProperty dct:modified .

:lastAccessedAt a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "last accessed at"@en ;
    rdfs:comment "Timestamp when the entity was last accessed or viewed."@en ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:dateTime .

### Session-specific Properties

:workingDirectory a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "working directory"@en ;
    rdfs:comment "The working directory for a session."@en ;
    rdfs:domain :AlephSession ;
    rdfs:range xsd:string .

:sessionDuration a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "session duration"@en ;
    rdfs:comment "Duration of the session in seconds."@en ;
    rdfs:domain :AlephSession ;
    rdfs:range xsd:duration .

### Statistics and Metrics

:viewCount a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "view count"@en ;
    rdfs:comment "Number of times the entity has been viewed."@en ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:integer .

:referenceCount a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "reference count"@en ;
    rdfs:comment "Number of references to this entity."@en ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:integer .

:interactionCount a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "interaction count"@en ;
    rdfs:comment "Number of interactions involving this entity."@en ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:integer .

### Tags and Categorization

:tag a owl:DatatypeProperty ;
    rdfs:label "tag"@en ;
    rdfs:comment "A tag or keyword associated with the entity."@en ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:string .

:category a owl:DatatypeProperty ;
    rdfs:label "category"@en ;
    rdfs:comment "A category classification for the entity."@en ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:string .

### Notes and Annotations

:notes a owl:DatatypeProperty ;
    rdfs:label "notes"@en ;
    rdfs:comment "Additional notes or annotations about the entity."@en ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:string .

:summary a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "summary"@en ;
    rdfs:comment "A brief summary of the entity."@en ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:string .

#################################################################
#    Individuals (Example Data)
#################################################################

### Example importance levels

:HighImportance a :ImportantConcept ;
    rdfs:label "High Importance Example"@en ;
    :perceivedImportance "0.9"^^xsd:decimal ;
    :importanceScale10 9 ;
    :displayColor "#FF6B6B" ;
    :displaySize "1.5"^^xsd:decimal .

:MediumImportance a :Concept ;
    rdfs:label "Medium Importance Example"@en ;
    :perceivedImportance "0.5"^^xsd:decimal ;
    :importanceScale10 5 ;
    :displayColor "#4ECDC4" ;
    :displaySize "1.0"^^xsd:decimal .

:LowImportance a :Concept ;
    rdfs:label "Low Importance Example"@en ;
    :perceivedImportance "0.2"^^xsd:decimal ;
    :importanceScale10 2 ;
    :displayColor "#95A5A6" ;
    :displaySize "0.5"^^xsd:decimal .
