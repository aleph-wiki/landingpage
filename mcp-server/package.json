{
  "name": "@aleph-wiki/mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Solid Pod RDF operations with SPARQL support",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run --exclude 'test/e2e/**'",
    "test:e2e": "vitest run test/e2e",
    "test:e2e:setup": "./test/e2e/scripts/setup-credentials.sh",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "mcp",
    "solid",
    "rdf",
    "sparql",
    "knowledge-graph"
  ],
  "dependencies": {
    "@comunica/query-sparql": "^5.0.1",
    "@inrupt/solid-client": "^2.0.1",
    "@inrupt/solid-client-authn-node": "^2.0.1",
    "@modelcontextprotocol/sdk": "^1.0.6",
    "n3": "^1.17.2",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@vitest/ui": "^4.0.16",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  }
}
